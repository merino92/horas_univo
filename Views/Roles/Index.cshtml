@section css{
    <link rel="stylesheet" href="~/css/datatables.min.css">
}

@section titulo{
    <h1>Roles y Permisos</h1>
}

<div class="col-12">
    <div class="card ">
        <div class="card-header">
            <h5 class="card-title">Listado de Roles</h5>
            <button type="button" id="btnew" class="btn btn-success float-right">Nuevo</button>
        </div>

        <div class="card-body">
            
            <table id="tabla" class="table table-bordered mt-2">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre del Rol</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody id="listado">
                </tbody>
            </table>
        </div>
    </div>
</div> 

<div class="modal fade bd-example-modal-xl" tabindex="-1" role="dialog" id="modal" aria-labelledby="myLargeModalLabel" aria-hidden="false">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
          <h5 class="modal-title" id="titulo Modal">Nuevo Rol</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="row">
              <div class="col-6">
                  <div class="form-group">
                      <label>Nombre del Perfil</label>
                      <input type="text" class="form-control"  id="nombre" placeholder="Nombre del Perfil" />
                  </div>
              </div>
              <div class="col-6">
                 <div class="form-group">
                     
                      <button type="button" class="btn btn-success" id="btnadd" >Guardar</button>
                      <button type="button" class="btn btn-warning" id="btnupdate" >Actualizar</button>
                 </div>
              </div>
          </div>
          <div class="row">
              <div class="col-12">
                  <table id="tabla" class="table table-bordered table-sm">
                <thead class="thead-dark "> 
                    <tr>
                        <th scope="col">Modulo</th>
                        <th scope="col" class="text-center">Ingresar</th>
                        <th scope="col" class="text-center">Crear</th>
                        <th scope="col" class="text-center">Modificar</th>
                        <th scope="col" class="text-center">Eliminar</th>
                        <th scope="col"class="text-center">Imprimir</th>
                    </tr>
                </thead>
                <tbody id="tblrol"></tbody>
            </table>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>

@section scripts{
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/custom/roles.js"></script>

}

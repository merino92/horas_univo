


@section titulo{
    <h1>Inventario General</h1>
}

<div class="col-12">
    <div class="card ">
        <div class="card-header">
            <h5 class="card-title">Listado de Inventario</h5>
            <button type="button" id="btnew" class="btn btn-success float-right">Nuevo</button>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-light">
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-3">
                                    <div class="form-group">
                                        <label>Codigo</label>
                                        <input type="text" class="form-control form-control-sm" id="cbuscar" />
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="form-group">
                                        <label>Nombre del Producto</label>
                                        <input type="text" class="form-control form-control-sm" id="pbuscar" />
                                    </div>
                                </div>
                                <div class="col-2">
                                   <div class="form-group">
                                       <label> </label>
                                        <button type="button" id="btnbuscar" class="btn btn-info mt-3">Buscar</button>
                                   </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre del Producto</th>
                        <th scope="col">Existencia</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div> 


<div class="modal fade bd-example-modal-lg" id="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
       <div class="modal-header">
        <h5 class="modal-title" id="titulo">Nuevo Producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-lg-3 col-md-12 col-sm-12">
                <div class="form-group">
                   
                    <img src="~/img/nodisponible.png"  class="img-thumbnail mt-1" id="img">
                    <input type="file" class="form-control-file mt-3" id="archivo">
                </div>
            </div>
              <div class="col-lg-9 col-md-12 col-sm-12">
                  <div class="row">
                      <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="form-group">
                            <label>Codigo</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Codigo" id="codigo" />
                        </div>
                      </div>
                  </div>
               
                <div class="form-group">
                   <label>Nombre del Producto</label>
                   <input type="text" class="form-control form-control-sm" placeholder="Nombre del Producto" id="producto" />
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12">
                        <div class="form-group">
                            <label>Marca</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Marca"id="marca" />
                        </div>
                    </div>
                     <div class="col-lg-6 col-md-12 col-sm-12">
                         <div class="form-group">
                            <label>Modelo</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Modelo"id="modelo" />
                        </div>
                     </div>
                </div>
              </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <div class="form-group">
                    <label for="detalle">Detalle</label>
                    <textarea class="form-control form-control-sm" id="detalle" rows="3"></textarea>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="form-group">
                    <label for="existencia">Existencias</label>
                    <input type="number" class="form-control form-control-sm" id="existencia" />
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-sm btn-primary" id="btnsave">Guardar</button>
          <button type="button" class="btn btn-sm btn-warning">Actualizar</button>
      </div>
    </div>
  </div>
</div>

@section scripts{
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/custom/inventario.js"></script>

}

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>INLABIE</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" href="~/lib/admin/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/admin/css/adminlte.min.css">
     <link rel="stylesheet" href="~/css/sitio.css">
     @RenderSection("css",required: false)

</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light larga" >
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-ligth" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
 
            </ul>

          

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fa fa-sing-in"></i>
                        <span class="badge badge-warning navbar-badge"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                       
                        <a href="@Url.Action("Index","Login")" class="dropdown-item">
                            <i class="fas fa-envelope mr-2"></i> Salir
                            
                        </a>
                        
                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 barra">
            <!-- Brand Logo -->
            <a href="../../index3.html" class="brand-link">
                <img src="~/img/admin/logo.png" alt="logo" class="brand-image  elevation-3" >
                <span class="brand-text font-weight-light">UNIVO</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/admin/iconouser.svg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block"> @HttpContextAccessor.HttpContext.Session.GetString("usuario")</a>
                    </div>
                </div>

              

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                       <li class="nav-item">
                            <a href="@Url.Action("Index","Home")" class="nav-link">
                                <i class="fas fa-home "></i>
                                <p>Inicio</p>
                            </a>
                        </li> 
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                               <i class="fa fa-id-card" aria-hidden="true"></i>
                                <p>Administracion
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Materia")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Materias</p>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Boleta")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Boletas</p>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Producto")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Devoluciones</p>
                                    </a>
                                </li>
                            </ul>
                        </li>     
                       <li class="nav-item has-treeview">
                           <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Inventario
                                    <i class="fas fa-angle-left right"></i>
                                    
                                </p>
                            </a> 
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Producto")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Inventario General</p>
                                    </a>
                                </li>
                            </ul><!--termina acordeon inventario-->
                             <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Historial")" class="nav-link">
                                         <i class="far fa-circle nav-icon"></i>
                                        <p>Historial de Productos</p>
                                    </a>
                                </li>
                            </ul><!--termina acordeon inventario-->
                             <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Movimiento")" class="nav-link">
                                         <i class="far fa-circle nav-icon"></i>
                                        <p>Entradas/Salidas</p>
                                    </a>
                                </li>
                            </ul><!--termina acordeon inventario-->
                       </li><!--termine el item inventario-->
                       <li class="nav-item has-treeview">
                           <a class="nav-link" >
                               <i class="nav-icon fas fa-wrench"></i>
                                <p>
                                    Mant. y Seguridad
                                    <i class="fas fa-angle-left right"></i>
                                   
                                </p>
                           </a>
                           <ul class="nav nav-treeview" >
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Roles")" class="nav-link">
                                         <i class="far fa-circle nav-icon"></i>
                                        <p>
                                            Roles
                                          
                                        </p>
                                    </a>
                                </li>
                                 <li class="nav-item">
                                    <a href="@Url.Action("Index","Usuario")" class="nav-link">
                                         <i class="far fa-circle nav-icon"></i>
                                        <p>
                                            Usuarios
                                          
                                        </p>
                                    </a>
                                </li>
                           </ul>
                       </li> <!--termina el item de seguridad-->
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-6">
                            @RenderSection("titulo")
                        </div>
                       
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row mb-2">
                        @RenderBody()
                    </div>
                </div><!-- /.container-fluid -->
             
            </section>
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.1.0
            </div>
            @{var year =DateTime.Now.Year.ToString();  }
            <strong>Copyright &copy; @year <a href="#">Merino</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/admin/adminlte.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    
    @RenderSection("Scripts", required: false)
